# Facebook Credentials
FACEBOOK_EMAIL=your-facebook-email@example.com
FACEBOOK_PASSWORD=your-facebook-password

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/job-scraper
MONGODB_DB_NAME=job_scraper

# Application Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Scraping Configuration
MAX_CONCURRENT_SESSIONS=1
DEFAULT_SCROLL_LIMIT=50
REQUEST_DELAY_MS=1000

# Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Apify Configuration
APIFY_API_TOKEN=your-apify-api-token-here
APIFY_ACTOR_ID=apify~facebook-groups-scraper

# External Job Filtering API
EXTERNAL_JOB_FILTER_API_URL=https://your-external-api-url.com
EXTERNAL_JOB_FILTER_ENDPOINT=/api/extract_job_posts

# Cron/Scheduler Configuration
CRON_SECRET_KEY=your-secret-cron-key-change-in-production
AUTO_SCRAPING_ENABLED=true
AUTO_SCRAPING_FREQUENCY=thrice_daily
AUTO_SCRAPING_SCHEDULE="0 9,15,21 * * *"
AUTO_SCRAPING_MAX_POSTS=30

# Browser Configuration
PUPPETEER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Optional: Proxy Configuration (if needed)
# PROXY_HOST=
# PROXY_PORT=
# PROXY_USERNAME=
# PROXY_PASSWORD=